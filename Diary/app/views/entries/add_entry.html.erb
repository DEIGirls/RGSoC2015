<div  ="header">
	<div class="container">
	<h1>DEIGirls Diary</h1>
	</div>
</div>
<div class="main">
	<div class="container">
		<h2> New entry </h2><br>
		<%= form_for(@new_entry) do |f| %>
			<div class="field"> 
				<%= f.label :Title %><br>
					<%= f.text_area :title %><br><br>
				<%= f.label :Description %><br>
					<%= f.text_area :description %> <br><br>
				<%= f.label :By %><br>
					<%= f.text_area :author %> <br><br>
			</div> 
			<div class="actions"> 
				<%= f.submit "Add" %> 
			</div> 
		<% end %>
	</div>
</div>