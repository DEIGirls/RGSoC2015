<div  ="header">
	<div class="container">
	<h1>DEIGirls Diary</h1>
	</div>
</div>
<div class="main">
	<div class="container">
		<h2> New entry </h2><br>
		<%= form_for(@entry) do |f| %>
			<%= f.object.errors.full_messages.join(', ') %>

			<div class="field">
				<%= f.label :title %><br>
					<%= f.text_field :title %><br><br>
				<%= f.label :description %><br>
					<%= f.text_area :description %> <br><br>
				<%= f.label :author, 'By' %><br>
					<%= f.text_area :author %> <br><br>
			</div>
			<div class="actions">
				<%= f.submit "Add" %>
			</div>
		<% end %>
	</div>
</div>
