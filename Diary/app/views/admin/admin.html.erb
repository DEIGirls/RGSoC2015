<div  ="header">
	<div class="container">
	<h1>DEIGirls Diary</h1>
	</div>
</div>
<div class="main">
	<div class="container">
		<h2> New entry </h2><br>
		<%= form_for(@new_entry) do |f| %>
			<div class="field"> 
				<%= f.label :Title %><br>
					<%= f.text_area :title %><br><br>
				<%= f.label :Description %><br>
					<%= f.text_area :description %> <br><br>
				<%= f.label :By %><br>
					<%= f.text_area :author %> <br><br>
			</div> 
			<div class="actions"> 
				<%= f.submit "Batatas" %> 
			</div> 
		<% end %>
	</div>

	<div class="container">
		<h2>Past entries</h2>
		<table style="width:100%">
			<td>Author</td>
			<td>Date</td>
			<td>Title</td>
			<td>Description</td>
			<td>Update</td>
			<td>Delete</td>
			<ul class="comments">
				<% @all_entries.each do |p| %>
					<tr>
						<td><%=p.author%></td>
						<td><%=p.created_at %></td>
						<td><%=p.title %></td>
						<td><%= p.description%></td>
						<td><%= button_to "Update", entry_path(p) %></td>
						<td><%= button_to "Delete", entry_delete_path(p) %>  </td>
					</tr>
				<% end %>
			</ul> 
        </table> 
    </div>
</div>



